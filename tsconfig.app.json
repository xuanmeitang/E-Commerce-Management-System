{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "allowImportingTsExtensions": false, // 推荐关闭
    "moduleResolution": "bundler",
    "strict": true,
    "outDir": "./dist",
    "types": ["vite/client"]
  },
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.d.ts",
    "src/**/*.ts"
  ]
}